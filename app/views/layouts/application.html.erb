<!DOCTYPE html>
<html>
  <head>
    <title>Nagano Cake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class= "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class= "container">
          <a class="navbar-brand" href="/">
            <span>ながのCAKE</span>
          </a>

        </div>

        <button class= "navbar-toggler collapsed" type= "button" data-toggle= "collapse" data-target= "#navbarNavDropdown" aria-controls= "navbarNavDropdown" aria-expanded= "false" aria-label= "Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class= "navbar-collapse collapse" id= "navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">

            <% if customer_signed_in? %>

              <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "注文履歴一覧", admin_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_customer_session_path, class: 'nav-link text-light' %>
              </li>

            <% else %>

              <li class="nav-item">
                <%= link_to "About", about_path, class: 'nav-link text-light' %>
              </li>

              <li class="nav-item">
                <%= link_to "商品一覧", items_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", customer_session_path, class: 'nav-link text-light' %>
              </li>

            <% end %>
          </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
