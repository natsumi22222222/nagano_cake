<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

  <%= @customer.full_name %>さんの会員時情報編集<br>

  <labal>会員ID</labal>
  <%= @customer.id %>
  <labal>氏名</labal>
  <%= f.text_field :last_name %><%= f.text_field :first_name %>
  <labal>フリガナ</labal>
  <%= f.text_field :full_name_kana %>
  <labal>郵便番号</labal>
  <%= f.text_field :postal_code %>
  <labal>住所</labal>
  <%= f.text_area :address %>
  <labal>電話番号</labal>
  <%= f.text_field :telephone_number %>
  <labal>メールアドレス</labal>
  <%= f.text_field :email %>
  <labal>会員ステータス</labal>
  <%= f.radio_button :is_deleted, :false %> 有効
  <%= f.radio_button :is_deleted, :true %>退会
  <%= f.submit "変更を保存" %>
<% end %>