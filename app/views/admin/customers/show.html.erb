<div class="container">
 <div class="row">
	 <div class="col-md-5">
    <h5><%= @customer.full_name %>さんの会員詳細</h5><br>

   <table class="table table-borderless">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td> <%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
              <% if @customer.is_deleted == true %>
      			    <span type="color:red"><%= "退会" %></span>
      		    <% else %>
      		      <span type= "color:green"><%= "有効" %></span>
      		    <% end %>
      		</td>
        </tr>
      </tbody>
   </table>


  <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-success m-3" %>
  <%= link_to '注文履歴一覧に戻る', admin_path, class: "btn btn-primary" %>

	 </div>
 </div>
</div>