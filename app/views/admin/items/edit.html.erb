<p>商品編集</p>
<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

  <label>参照画像</label>
  <%= f.file_field :image, accept: "image/*" %><br>

  <label>商品名</label>
  <%= f.text_field :name %><br>

  <label>商品説明</label>
  <%= f.text_area :introduction %><br>

  <label>ジャンル</label>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all,:id, :name) %><br>

  <label>税抜価格</label>
  <%= f.number_field :price %><br>

  <label>販売ステータス</label>
  <%= f.radio_button :is_active, :true, checked: "checked" %>販売中
  <%= f.radio_button :is_active, :false %>販売停止中<br>
  <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>