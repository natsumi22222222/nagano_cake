<p>商品新規登録</p>

<%= form_with model: @item, url: admin_items_path do |f| %>
  <label class="form-image">
    <span class= "image-file">ファイルを選択</span>
      商品画像
  </label>
  <%= f.file_field :image %>

  <label>商品名</label>
  <%= f.text_field :name, placeholder: "商品名" %>

  <label>商品説明</label>
  <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>

  <label>ジャンル</label>%>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all,:id, :name), include_blank: "選択して下さい" %>

  <label>税抜価格</label>
  <%= f.number_field :price, placeholder: "1000" %>

  <label>販売ステータス</label>
  <%= f.radio_button :is_active, "販売中" %>
  <%= f.radio_button :is_active, "販売停止中" %>
  <%= f.submit "新規登録" %>
<% end %>