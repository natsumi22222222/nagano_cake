<div class="container">
  <div class= "row">
    <div class= "col-md-12">

      <h5>商品新規登録</h5>
      <div class="text-center">

      <%= form_with model: @item, url: admin_items_path do |f| %>
        <label>参照画像</label>
        <%= f.file_field :image, accept: "image/*", class: "m-2" %><br>

        <label>商品名</label>
        <%= f.text_field :name, placeholder: "商品名", class: "m-2" %><br>

        <label>商品説明</label>
        <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %><br>

        <label>ジャンル</label>
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all,:id, :name), include_blank: "選択して下さい", class: "m-2" %><br>

        <label>税抜価格</label>
        <%= f.number_field :price, placeholder: "1000" %><br>

        <label>販売ステータス</label>
        <%= f.radio_button :is_active, :true, checked: "checked", class: "m-2" %>販売中
        <%= f.radio_button :is_active, :false %>販売停止中<br>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>

      </div>
    </div>
  </div>
</div>