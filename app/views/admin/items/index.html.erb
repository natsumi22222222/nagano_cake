<p>商品一覧</p>

<%= link_to new_admin_item_path do %>
  <button type="button" class="btn btn-light rounded-circle p-0 " style="width:2rem;height:2rem;">＋</button>
<% end %>

<table>
  <thead>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to item.name,admin_item_path(item.id) %>
      </td>
      <td>
        <%= item.price %>
      </td>
      <td>
        <%= item.genre.name %>
      </td>
      <td>
        <% if (item.is_active == true) then %>
          販売中
        <% else %>
        <% item.is_active =! false %>
          販売停止中
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>