<p>商品一覧</p>

<table>
  <thead>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to @item.name %>
      </td>
      <td>
        <%= item.price %>
      </td>
      <td>
        <%= item.genre_id %>
      </td>
      <td>
        <%= item.is_active %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>