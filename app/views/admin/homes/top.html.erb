<p>注文履歴一覧</p>

<table class= "table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
              <td><%= order.customer.full_name %></td>
              <td>
                  <% order.order_details.each do |order_detail| %>
                    <%= order_detail.amount %>
                  <% end %>
              </td>
              <td><%= order.status_i18n %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
