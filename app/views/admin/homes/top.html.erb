<p>注文履歴一覧</p>

<table class= "table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order.each do |order| %>
             <tr>
               <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
               <td><%= order.last_name order.first_name %></td>
               <td><%= order.amount %></td>
               <td><%= order.status %></td>
             </tr>
            <% end %>
          </tbody>
        </table>
