<div class="container">
  <div class="row">
    <div class="col-sm col-sm-offset-1">

    <h5>注文履歴一覧</h5>

      <table class= "table m-4">
        <thead>
          <tr>
            <th class= "table-active">購入日時</th>
            <th class= "table-active">購入者</th>
            <th class= "table-active">注文個数</th>
            <th class= "table-active">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order.id) %></td>
            <td><%= order.customer.full_name %></td>
            <td>
                <%= order.order_details.sum(:amount) %>
            </td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class= "p-3">
        <%= paginate @orders_page %>
      </div>
    </div>
  </div>
</div>