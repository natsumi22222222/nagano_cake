          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込価格）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody>
             <tr>
               <td><%= order_id.name %></td>
               <td><%= order.total_payment %></td>
               <td><%= order_detail.amount %></td>
               <td><%= item_id.price %></td>
               <td><%= order_details.making_status %></td>
             </tr>
          </tbody>
        </table>