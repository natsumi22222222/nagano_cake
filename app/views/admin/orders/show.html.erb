<div class="container">
  <h5>注文履歴詳細</h5>
    <div class="row">
      <div class="col-xs-6">


        <label>購入者</label>
        <%= @order.customer.full_name %><br>
        <label>注文日</label>
        <%= @order.created_at.strftime('%Y/%m/%d') %><br>
        <label>配送先</label>
        〒<%= @order.postal_code %><br><%= @order.address %><br>
        <label>支払方法</label>
        <%= @order.payment_method_i18n %><br>
        <label>注文ステータス</label>
        <%= form_with model:@order, url: admin_order_path, method: :patch, local: true do |f| %>
          <%= f.select :status,Order.statuses.keys.map {|k|[I18n.t("enums.order.status.#{k}"), k]} %>
          <%= f.submit "更新", class: 'btn btn-sm btn-success' %>
        <% end %>

        <table class= "table">
          <thead>
            <tr>
              <th class="table-active">商品名</th>
              <th class="table-active">単価（税込）</th>
              <th class="table-active">数量</th>
              <th class="table-active">小計</th>
              <th class="table-active">製作ステータス</th>
            </tr>
          </thead>
          <tbody>
          <% @order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td><%= order_detail.tax_price.to_s(:delimited) %></td>
                <td><%= order_detail.amount %></td>
                <td><%= order_detail.tax_price*order_detail.amount.to_i %></td>
                <td>
                  <%= form_with model: @order_detail, url:  admin_order_detail_path, method: :patch, local: true do |f| %>
                    <%= f.select :making_status, OrderDetail.making_statuses.keys.map {|k|[I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
                    <%= f.submit "更新", class: "btn btn-sm btn-success" %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

  	<div class="row">
      <div class="col-xs-6">
  				<p>請求情報</p>
  				  <table class="table table-bordered">
  					  <tr>
  						  <th>商品合計</th>
  						  <td><%= @total %></td>
  					  </tr>
    					<tr>
    						<th>配送料</th>
    						<td><%= @order.shipping_cost.to_i %></td>
    					</tr>
    					<tr>
    						<th>ご請求額</th>
    						<td><%= @total + @order.shipping_cost.to_i %></td>
    					</tr>
  				  </table>
  			</div>
  		</div>
  </div>