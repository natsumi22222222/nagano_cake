<p>注文履歴詳細</p>

<label>購入者</label>
<%= @order.name %>
<label>注文日</label>
<%= @order.created_at.strftime('%Y/%m/%d') %>
<label>配送先</label>
<%= @order.address %>
<label>支払方法</label>
<%= @order.payment_method %>
<label>注文ステータス</label>
<%= f.select @order.status, class: "form-control form-control-sm col-6" %>
<%= f.submit "更新" %>

