<p>注文履歴詳細</p>

<label>購入者</label>
<%= @order.name %>
<label>注文日</label>
<%= @order.created_at.strftime('%Y/%m/%d') %>
<label>配送先</label>
<%= @order.address %>
<label>支払方法</label>
<%= @order.payment_method %>
<label>入金ステータス</label>
<%= @order.status %>

<table class= "table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込価格）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_details| %>
             <tr>
               <td><%= item_id.name %></td>
               <td><%= order_details.tax_price %></td>
               <td><%= order_details.amount %></td>
               <td><%= item_id.price %></td>
               <td><%= order_details.making_status %></td>
             </tr>
            <% end %>
          </tbody>
        </table>