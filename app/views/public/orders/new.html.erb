<h5>注文情報入力</h5>
<%= form_with model: @order, local: true, url: orders_confirm_path do |f| %>
  <label>支払方法</label><br>
  <%= f.radio_button :payment_method, :credit_card, checked: "checked"%> クレジットカード
  <%= f.radio_button :payment_method, :transfer %> 銀行振込<br>

  <label>お届け先</label><br>
  <%= f.radio_button :select_address, 1 %> ご自身の住所<br>
  <%= @customer.address %><br>
  <%= @customer.last_name %><%= @customer.first_name %><br>

  <%= f.radio_button :select_address, 2 %>登録済住所から選択<br>
  <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>

  <%= f.radio_button :select_address, 3 %>新しいお届け先<br>
    <label>郵便番号</label>
  	<%= f.text_field :postal_code %><br>

  	<label>住所</label>
  	<%= f.text_field :address %><br>

  	<label> 宛名</label>
  	<%= f.text_field :name %><br>

  <%= f.submit "確認画面へ進む" , class: "btn btn-primary" %>

<% end %>
