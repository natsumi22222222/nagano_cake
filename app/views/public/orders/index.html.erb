<p>注文履歴一覧</p>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%#= l order.time %></td>
      <td><%= order.address  %></td>
      <td><%= order.item.name  %></td>
      <td><%= order.total_payment  %>円</td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", order_path(order.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>