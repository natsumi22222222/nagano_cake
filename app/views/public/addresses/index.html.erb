<h5>配送先登録/一覧</h5>
<div class= "container">
  <div class="row">
    <%= form_with model: @address, url: addresses_path, local: true do |f| %>
    <table>
      <tr>
        <th>郵便番号（ハイフンなし）</th>
        <td><%= f.text_field :postal_code, placeholder: "0000000",class: "form-control" %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address, placeholder: "東京都代々木神園町0-0", class: "form-control" %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= f.text_field :name, placeholder: "令和道子", class: "form-control" %></td>
      </tr>
        <td><%= f.submit '新規登録', class: "btn btn-sm btn-success" %></td>
    </table>
    <% end %>
  </div>

  <br>
    <div class="row">
      <table class= "table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan= "3"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td><% link_to '編集する', edit_address_path(address), class: "btn btn-sm btn-success" %></td>
            <td><% link_to '削除する', address_path(address),method: :delete, class: "btn btn-sm btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
   </div>
 </div>




