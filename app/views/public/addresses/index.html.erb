<p>配送先登録/一覧</p>

  <%= form_with model: @address, url: addresses_path do |f| %>
    <label>郵便番号（ハイフンなし）</label>
     <%= f.text_field :postal_code %>
     <label>住所</label>
     <%= f.text_field :address %>
     <label>宛名</label>
     <%= f.text_field :name %>
     <%= f.submit '新規登録' %>
  <% end %>

   <table class= "table">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= postal_code %></td>
        <td><%= address %></td>
        <td><%= name %></td>
        <td><% link_to '編集する', edit_address_path(address), class: "btn btn-sm btn-success" %></td>
        <td><% link_to '削除する', address_path(address),method: :delete, class: "btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
   </table>
