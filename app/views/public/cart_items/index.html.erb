<p>ショッピングカート</p>

<%= button_to "全て削除",  destroy_all_cart_items_path, method: :delete %>

<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% @cart_item.each do |cart_item| %>
      <tr>
          <td>
            <%= image_tag item.image, size: "100x100" %>
            <%= cart_item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal %></td>
          <td><% @with_tax_price +=  cart_item.subtotal %></td>
      </tr>
  <% end %>
  </tbody>
</table>