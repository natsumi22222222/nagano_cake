<div class="container">
    <h5 class= "item-index"> 商品一覧（全<%= @count %>件）</h5>
    <div class="row">
      <% @items.each do |item| %>
      <div class="col-md-3">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image, size: "160x160" %>
        <% end %>
          <p><%= item.name %></p>
          <p>¥<%= item.with_tax_price %>(税込)</p>
      </div>
    <% end %>
    </div>
    <%= paginate @items_page %>
</div>
